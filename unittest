#!/usr/bin/env python
# -*- coding: utf-8 -*-

import genesis

class ChoiceTest:
    cases = {
        'File input test': {
            'file': 'input',
            },
        'String input test': {
            'input': 'This is the stem\n\nThis is an option',
            },
        }
    def run(self):
        print "Test results:\n"

        for name, case in self.cases.iteritems():
            print '============================='
            print name, '\n'
            r = genesis.Router()
            if case.get('file'):
                options = {'inputfile': case.get('file')}
            else:
                options = None
            output = r.start(options=options, str=case.get('input'), ret=True)
            print output
            del r

if __name__ == '__main__':
    s = ChoiceTest()
    s.run()
