#!/usr/bin/env python
# -*- coding: utf-8 -*-

from router import Router

class ChoiceTest:
    cases = {
        'File input test': {
            'file': 'input',
            },
        'String input test': {
            'input': 'This is the stem\n\nThis is an option',
            },
        }
    def run(self):
        print "Test results:\n"

        for name, case in self.cases.iteritems():
            print '============================='
            print name, case, '\n'
            r = Router()
            if case.get('file'):
                r.parse_args(('--inputfile', case.get('file')))
            elif case.get('input'):
                r.parse_args((case.get('input'),))
            r.start()
            print r.output
            del r

if __name__ == '__main__':
    s = ChoiceTest()
    s.run()
